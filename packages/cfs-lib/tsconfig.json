{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"module": "NodeNext",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"target": "es2022",
		"moduleResolution": "NodeNext",
		"tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
		"skipLibCheck": true,
		"strictPropertyInitialization": false,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": [
		"./src/**/*",
		"./src/project-generation/firmware-platform/zephyr/templates/.vscode/*"
	],
	"ts-node": {
		"esm": true
	}
}
